<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".HomeActivity"
    android:background="@color/dark_background"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/homeToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeToolBar"
            >
            <VideoView
                android:id="@+id/backgroundVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"/>

            <!--            <androidx.legacy.widget.Space-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="70dp" />-->

            <TextView
                android:id="@+id/tagLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="126dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/alatsi"
                android:gravity="center"
                android:text="'Reveal the True Identity of Your Brand with BrandRecon'"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/volumeUp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_volume_up"
                app:shapeAppearanceOverlay="@style/circle"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:foreground="@drawable/click_effect_2"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/volumeOff"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_volume_off"
                    app:shapeAppearanceOverlay="@style/circle"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:foreground="@drawable/click_effect_2"
                    android:visibility="gone"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="50dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4FFFFFFF">

                    <LinearLayout
                        android:id="@+id/btnNameSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:background="@drawable/ripple_effect_2"
                        android:foreground="@drawable/click_effect_1"
                        android:clickable="true">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop" app:srcCompat="@drawable/brand_name_search"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Search Brand"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:fontFamily="@font/sourcecodepro_variablefont_wght"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#4FFFFFFF"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/btnLogoSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:background="@drawable/ripple_effect_3"
                        android:foreground="@drawable/click_effect_2"
                        android:clickable="true">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/logo_scanner"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scan logo"
                            android:textAlignment="center"
                            android:textColor="@color/black"

                            android:textSize="20dp"
                            android:fontFamily="@font/sourcecodepro_variablefont_wght"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>




        </RelativeLayout>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/menu_header"
        android:background="#36FFFFFF"
        app:menu="@menu/home_menu" />

</androidx.drawerlayout.widget.DrawerLayout>